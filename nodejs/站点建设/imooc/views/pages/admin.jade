extends ../layout
block content
    .container
        .row
            form.form-horizontal(method="post",action="/admin/movie/new")
                //- typo -> #{movie{_id}} 
                //- input#title.form-control(type="text", name="movie[title]", value=movie.title)
                //- 不太确定 name="movie{...}" 能不能把post的数据装到movie对象中~ 请帮我解答下 ，多谢
                input(type="hidden",name="movie[_id]",value="#{movie_id}")
                .form-group
                    label.col-sm-2.control-label(for="title") 电影名字
                    .col-sm-10
                        input#title.form-control(type="text",name="movie{title}")
                .form-group
                    label.col-sm-2.control-label(for="doctor") 导演
                    .col-sm-10
                        input#doctor.form-control(type="text",name="movie{doctor}")
                .form-group
                    label.col-sm-2.control-label(for="year") 上映年份
                    .col-sm-10
                        input#year.form-control(type="text",name="movie{year}")
                .form-group
                    label.col-sm-2.control-label(for="country") 国家
                    .col-sm-10
                        input#country.form-control(type="text",name="movie{country}")
                .form-group
                    label.col-sm-2.control-label(for="language") 语言
                    .col-sm-10
                        input#language.form-control(type="text",name="movie{language}")
                .form-group
                    label.col-sm-2.control-label(for="poster") 封面
                    .col-sm-10
                        input#poster.form-control(type="text",name="movie{poster}")
                .form-group
                    label.col-sm-2.control-label(for="flash") 视频地址
                    .col-sm-10
                        input#flash.form-control(type="text",name="movie{flash}")
                .form-group
                    label.col-sm-2.control-label(for="summary") 简介
                    .col-sm-10
                        input#summary.form-control(type="text",name="movie{summary}")
        .row.text-right
            button.btn.btn-default(type="button") 导入